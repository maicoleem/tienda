#Install python
sudo apt install python3 python3-pip

#Virtual environment
sudo apt install python3-venv
mkdir tienda-proyecto
cd tienda-proyecto
python3 -m venv env

#start env
source env/bin/activate

#install flask
pip install Flask

#install SQLAlchemy pip install Flask-SQLAlchemy
pip install SQLAlchemy

#run appp
python app.py

#URL
http://127.0.0.1:5000/

